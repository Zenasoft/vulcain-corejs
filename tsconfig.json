{
    "compileOnSave": false,
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "module": "commonjs",
        "target": "es2017",
        "watch": false,
        "strictFunctionTypes": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "lib",
        "rootDir": "."
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}